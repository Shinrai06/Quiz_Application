                           <items>
                              <Label fx:id="title" prefHeight="18.0" prefWidth="330.0" text="QuizTitle" textAlignment="CENTER" />
                              <Label fx:id="time" alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="62.0" text="Time" textAlignment="CENTER" />
